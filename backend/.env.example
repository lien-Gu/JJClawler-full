# JJCrawler 环境变量配置示例

# =================
# 基础配置
# =================
DEBUG=false
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =================
# 服务器配置
# =================
HOST=0.0.0.0
PORT=8000

# =================
# 数据库配置
# =================
DATABASE_URL=sqlite:///./data/jjcrawler.db

# =================
# CORS配置
# =================
CORS_ORIGINS=*
CORS_CREDENTIALS=false
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# =================
# 爬虫配置
# =================
# 最大并发请求数
MAX_CONCURRENT_REQUESTS=8

# 请求间隔（秒）
REQUEST_DELAY=1.0

# 重试次数
RETRY_TIMES=2

# 重试延迟（秒）
RETRY_DELAY=2.0

# 请求超时（秒）
REQUEST_TIMEOUT=30.0

# =================
# 调度器配置
# =================
# 是否启用调度器
SCHEDULER_ENABLED=true

# 最大工作线程数
SCHEDULER_MAX_WORKERS=5

# 时区设置
SCHEDULER_TIMEZONE=Asia/Shanghai

# =================
# 任务清理配置
# =================
# 是否启用任务清理
CLEANUP_ENABLED=true

# 清理间隔（小时）
CLEANUP_INTERVAL_HOURS=24

# 任务保留天数
JOB_RETENTION_DAYS=30

# 单次清理批次大小
CLEANUP_BATCH_SIZE=100

# =================
# 日志配置
# =================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =================
# 开发配置
# =================
# 是否启用API文档
ENABLE_DOCS=true

# 是否启用调试模式
ENABLE_DEBUG=false

# =================
# 监控配置
# =================
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# 指标收集间隔（秒）
METRICS_INTERVAL=60