# 数据库配置
DATABASE_URL=sqlite:///./data/jjcrawler.db

# API配置
API_V1_STR="/api/v1"
PROJECT_NAME="JJCrawler3"
DEBUG=True

# 爬虫配置
CRAWL_DELAY=1.0
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# 任务调度配置
SCHEDULER_TIMEZONE=Asia/Shanghai
JIAZI_SCHEDULE="0 */1 * * *"  # 每小时执行
RANKING_SCHEDULE="0 0 * * *"  # 每天执行